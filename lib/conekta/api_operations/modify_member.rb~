module Conekta
  module APIOperations
    module ModifyMember
      def modify_member(parent, member, action, method, params={}, api_key=nil)
        path = "#{path}/#{member}/#{action}"
        response, api_key = Conekta.request(method.to_sym, path, api_key, params)
        self.customer.subscription = self
        self
      end
    end
  end
end
